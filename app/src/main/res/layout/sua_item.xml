<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="@drawable/botron"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botrontren"
            android:padding="10dp"
            android:text="Sửa Thông Tin"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/edManvs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vuong"
            android:ems="10"
            android:hint="Mã nv"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edTennvS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/vuong"
            android:ems="10"
            android:hint="Tên nv"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edSdtS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/vuong"
            android:ems="10"
            android:hint="Sdt"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <EditText
            android:id="@+id/edDiachis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/vuong"
            android:ems="10"
            android:hint="Địa Chỉ"
            android:inputType="textPersonName"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/btnthoatsua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="#B6ADAD"
            android:text="Thoát"
            android:textColor="#304DEF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSuas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:text="sửa"
            android:textColor="#1755CD"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>