<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Test.CanhanFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/vuong"
        android:orientation="vertical"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAnh"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:civ_border_width="2dp"
            app:civ_border_color="#2237BC"
        />


        <Button
            android:id="@+id/btnthemanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF5722"
            android:text="Chọn" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:padding="29dp">

            <LinearLayout
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:background="@drawable/botroncanha"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/doimk" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="115dp"
                android:text="Đổi Mật Khẩu"
                android:textStyle="bold"
                app:layout_column="0"
                app:layout_row="0" />

            <LinearLayout
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:background="@drawable/botroncanha"
                android:orientation="horizontal"
                app:layout_column="4"
                app:layout_row="0">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="25dp"

                    android:layout_marginTop="25dp"
                    android:src="@drawable/exit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="115dp"
                android:text="Đăng Xuất"
                android:textStyle="bold"
                app:layout_column="4"
                app:layout_row="0" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</FrameLayout>


