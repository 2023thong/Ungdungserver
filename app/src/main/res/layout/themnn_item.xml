<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/botron"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botrontren"
            android:padding="10dp"
            android:text="Thêm Nhân Viên"
            android:textColor="#2144F3"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/edManv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/vuong"
            android:ems="10"
            android:hint="Manv"
            android:inputType="textPersonName"
            android:padding="6dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edTennv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/vuong"
            android:ems="10"
            android:padding="6dp"
            android:hint="Tên nv"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edSdt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/vuong"
            android:ems="10"
            android:padding="6dp"
            android:hint="Sdt"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edDiachi1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/vuong"
            android:ems="10"
            android:padding="6dp"
            android:hint="Địa chỉ"
            android:inputType="textPersonName"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:backgroundTint="#B6ADAD"
            android:text="Thoát"
            android:textColor="#1654D3"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FFEB3B"
            android:text="Thêm"
            android:textColor="#1654D3"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>